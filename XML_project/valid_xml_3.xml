        <situation>
            <part_of_Bulgaria>югоизточна част от България</part_of_Bulgaria>
            <districts>
                <partial>
                    <name>Пазарджишка</name>
                    <name>Пловдивска</name>
                    <name>Старозагорска</name>
                    <name>Ямболска</name>
                    <name>Сливенска</name>
                    <name>Бургаска</name>
                </partial>
            </districts>
        </situation>
        <relief>
            <mountain has="Да"/>
            <type>низинен и равнинно-хълмист</type>
            <average_altitude metric_units="м">315</average_altitude>
        </relief>
        <borders>
            <east>
                <name>Черноморска област</name>
                <length metric_units="км">188</length>
